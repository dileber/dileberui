<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.drcosu.ndileber.dileberui.timetable.singleline.CalenderTextView
        android:id="@+id/calenderNum"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:gravity="center"
        tools:text="10"
        android:background="@drawable/calendar_viewpager_bg_selector"
        android:textColor="@color/calendar_viewpager_text_selector"
        android:clickable="false"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/calenderHaveClass"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@drawable/time_table_haveclass"
        android:layout_gravity="center"

        />


</LinearLayout>